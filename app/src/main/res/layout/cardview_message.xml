<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <LinearLayout
        android:id="@+id/linearLayoutMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble_corner_left"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/imageViewMessage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/fondo"
            android:scaleType="centerCrop"
            android:minWidth="305dp"
            android:visibility="gone"
            android:layout_marginRight="9dp" />

        <FrameLayout
            android:id="@+id/frameLayoutVideo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:minWidth="305dp"
            android:background="@color/black"
            android:layout_marginRight="9dp"
            android:layout_weight="1">

            <View
                android:id="@+id/viewVideo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circular_view"
                android:backgroundTint="@color/colorGrayDark"
                android:layout_gravity="center"
                android:alpha="0.7" />

            <ImageView
                android:id="@+id/imageViewVideo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_play"
                android:layout_gravity="center" />

        </FrameLayout>

        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nuevo mensaje..."
            android:textColor="@color/black"
            android:textSize="15dp" />
        <!-- android:layout_marginRight="15dp" -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayoutDocument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/ic__file" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="5dp"
                    android:text="Documento"
                    android:textSize="12dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00 A.M"
                android:textColor="@color/colorGrayDark"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/imageViewCheck"
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_check_double_gris" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>