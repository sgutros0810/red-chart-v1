<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardViewOptions"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ImagePagerFragment"
    app:cardBackgroundColor="@color/colorFullBlack">

    <LinearLayout
        android:id="@+id/linearLayoutViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imageViewPicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/fondo"
            android:scaleType="centerCrop"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            android:visibility="visible"
            />

        <FrameLayout
            android:id="@+id/frameLayoutVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:visibility="gone"
            android:layout_weight="1">

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <!-- Circulo para el icono  -->
            <View
                android:id="@+id/viewVideo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/circular_view"
                android:backgroundTint="@color/black"
                android:alpha="0.7" />

            <!-- Imagen del icono reproducción -->
            <ImageView
                android:id="@+id/imageViewVideo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_play"
                android:layout_gravity="center" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_photo_white" />

            <View
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:background="@color/white"
                android:layout_marginLeft="10dp" />

            <EditText
                android:id="@+id/editTextComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Añade un comentario"
                android:textColorHint="@color/colorGrayLight"
                android:textColor="@color/white"
                android:background="@null"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="14dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageViewSend"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_send" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"/>

</androidx.cardview.widget.CardView>